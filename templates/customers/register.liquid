{% assign title = settings.customer_register_title %}

{% assign description = settings.customer_register_description %}

{% assign call_to_action = settings.customer_register_call_to_action %}

{% assign back_to_login_prompt = settings.customer_register_back_to_login %}

{% assign login_call_to_action = settings.customer_login_title %}

{% include "breadcrumb" %}

<div class="customer-form-container medium--padding-top--up-4 small--padding-top--up-2 large--padding-bottom--up-7 medium-down--padding-bottom--up-5">
  <div class="flex medium-down--flex-direction--column">
    <div class="flex-item--4 padding-right--up-5">
      <div class="large--padding-bottom--up-6 large--border-bottom-detail margin-bottom--up-3">
        <h1 class="font-size--up-9 small--font-size--up-5 medium--font-size--up-6 font-bold font-secondary large--line-height--up-9 medium-down--line-height--up-6">
          {{ title }}
        </h1>
        {% if description %}
          <p>{{ description }}</p>
        {% endif %}
      </div>
      <p class="text-links font-secondary font-size--up-2 line-height--up-5 text-links font-secondary font-size--up-2 line-height--up-5 medium-down--hide">
        {{ back_to_login_prompt }}
        <br>
        <a class="text-primary" href="/account/login">
          {{ login_call_to_action }}
        </a>
      </p>
    </div>
    <div class="flex-item--8">
      {% form "create_customer" %}

        {% if form.errors %}
          <div class="text-links">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <input type="text" id="register-first-name" class="input margin-bottom--up-2 border-detail margin-bottom--none padding-top-bottom--up-1 padding-left--up-1" name="customer[first_name]" placeholder="First Name" value="" autocapitalize="words" autofocus />

        <input type="text" id="register-last-name" class="input margin-bottom--up-2 border-detail margin-bottom--none padding-top-bottom--up-1 padding-left--up-1" name="customer[last_name]" placeholder="Last Name" value="" autocapitalize="words" />

        <input type="email" id="register-email" class="input margin-bottom--up-2 border-detail margin-bottom--none padding-top-bottom--up-1 padding-left--up-1" name="customer[email]" placeholder="Email" value="" autocorrect="off" autocapitalize="off" required />

        <input type="password" id="register-password" class="input margin-bottom--up-2 border-detail margin-bottom--none padding-top-bottom--up-1 padding-left--up-1" name="customer[password]" placeholder="Password" value="" required />

        <button type="submit" class="block padding-top-bottom--up-1 button-primary-filled border-primary-thicker hover-border-primary-thicker font-size--up-1 one-whole medium-down--padding-top-bottom--0">
          {{ call_to_action }}
        </button>
        <p class="text-links font-secondary font-size--up-2 line-height--up-5 large--hide">
          {{ back_to_login_prompt }}
          <a class="text-primary" href="/account/login">
            {{ login_call_to_action }}
          </a>
        </p>
      {% endform %}
    </div>
  </div>

</div>
