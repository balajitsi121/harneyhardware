  <body data-theme="{{ theme_data_json }}" {% if template == 'collection' and collection.id %} class="ss-collection"{% elsif template == 'search.spring' %} class="ss-search"{% endif %}>
    
    {% section "header" %}

    <main role="main">
      {{ content_for_layout }}
    </main>

    {% section "footer" %}

    {{ "//ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js" | script_tag }}
    {{ "//cdnjs.cloudflare.com/ajax/libs/vex-js/3.0.0/js/vex.combined.min.js" | script_tag }}

    {%- if template contains "google-analytics-sync" -%}
      {%- include "object-current-params" -%}
      {%- if current_params_id -%}
        {{ "google-analytics-sync.js" | asset_url | script_tag }}
      {%- endif -%}
    {%- endif -%}

    {%- if template contains "ups-validation" -%}
      {%- include "object-current-params" -%}
      {%- if current_params_id -%}
        {{ "ups-validation.js" | asset_url | script_tag }}
      {%- endif -%}
    {%- endif -%}

    {% if settings.development_mode %}
      {% include "requirejs" %}
    {% else %}
      {{ "theme.min.js" | asset_url | script_tag }}
    {% endif %}

    {% include 'dynamic-remarketing' %}
    {% include "google-drm" %}
    {% include "upgrade-browser-notice" %}

    {{ "custom.js" | asset_url | script_tag }}

  </body>
</html>

