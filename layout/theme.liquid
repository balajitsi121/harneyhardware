<!doctype html>
<html class="no-js">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="theme-color" content="{{ settings.color_primary }}" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <link rel="icon" href="{{ 'favicon.ico' | asset_url }}" />

    {% include "title" %}

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}" />
    {% endif %}

	  {% include "searchspring" %}
    {% include "noindex" %}
    {% include 'schema' %}

    {% include "facebook-open-graph" %}
    {% include "facebook-pixel" %}
    {% include "twitter-cards" %}

    {% include "object-canonical" %}
    <link rel="canonical" href="{{ canonical }}" />

    {{ "//fonts.googleapis.com/css?family=Open+Sans:400,700" | stylesheet_tag }}
    {{ "//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" | stylesheet_tag }}
    {{ "//cdnjs.cloudflare.com/ajax/libs/vex-js/3.0.0/css/vex.min.css" | stylesheet_tag }}
    {{ "//cdnjs.cloudflare.com/ajax/libs/vex-js/3.0.0/css/vex-theme-default.min.css" | stylesheet_tag }}
    <link id="theme-scss" href="{{ 'theme.scss.css' | asset_url }}" rel="stylesheet" type="text/css" media="all" />

    {% if template contains "customers" %}
      {{ "shopify_common.js" | shopify_asset_url | script_tag }}
      {{ "customer_area.js"  | shopify_asset_url | script_tag }}
    {% endif %}

    {{ content_for_header }}

    {% include "hide-admin-bar" %}
  
