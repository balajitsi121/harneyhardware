{% include "breadcrumb" %}

<div class="padding-bottom--up-4">
  <div class="theme-container">

    <div id="privacy-policy" class="grid grid-gutter--none border-bottom-detail padding-top--up-2 padding-bottom--up-1">
      {% include "page-returns-privacy-policy" %}
    </div>

    <div id="terms-of-sale" class="grid grid-gutter--none border-bottom-detail large--padding-top--up-4 medium--padding-top--up-3 small--padding-top--up-2 large--padding-bottom--up-5 medium--padding-bottom--up-4 small--padding-bottom--up-3">
      {% include "page-returns-terms-of-sale" %}
    </div>

    <div id="returns" class="grid grid-gutter--none large--padding-top--up-4 medium--padding-top--up-3 small--padding-top--up-3 xlarge--padding-bottom--up-7 large--padding-bottom--up-2 medium--padding-bottom--up-2 small--padding-bottom--up-4">
      {% include "page-returns-product-returns" %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page Returns",
  "settings": [
    {
      "type":"header",
      "content":"Privacy Policy"
   },
    {
      "type":"textarea",
      "id":"page_returns_privacy_policy_header",
      "label":"Header",
      "default":"Harney Hardware<br>privacy policy"
   },
   {
      "type":"richtext",
      "id":"page_returns_privacy_policy_step_1",
      "label":"Copy 1",
      "default":"<p>We Will Ask Only For Information Necessary To Complete Your Order. <\/p>"
   },
   {
      "type":"richtext",
      "id":"page_returns_privacy_policy_step_2",
      "label":"Copy 2",
      "default":"<p>We Use Encryption Technology To Keep Your Information Secret.<\/p>"
   },
   {
      "type":"richtext",
      "id":"page_returns_privacy_policy_step_3",
      "label":"Copy 3",
      "default":"<p>If Place Your Order Online No One In Our Company Has Access To Your Credit Card Information.<\/p>"
   },
   {
      "type":"richtext",
      "id":"page_returns_privacy_policy_step_4",
      "label":"Copy 4",
      "default":"<p>Small Bits Of Software, Known As Cookies, May Be Added To Your Internet Browser. <\/p>"
   },
   {
      "type":"richtext",
      "id":"page_returns_privacy_policy_step_5",
      "label":"Copy 5",
      "default":"<p>We Will Send You: Order Acknowledgement And Shipping Confirmation Emails.<\/p>"
   },
   {
      "type":"richtext",
      "id":"page_returns_privacy_policy_step_6",
