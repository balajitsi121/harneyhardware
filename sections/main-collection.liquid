{% include "attribute-collection-sort-titles", settings: section.settings  %}
{% include "attribute-collection-sort-values"  %}
{% include "attribute-collection-sort-by"  %}
{% include "attribute-collection-filters" %}
{% include "attribute-collection-parent-linklist"  %}
{% include "attribute-collection-products-per-page", settings: section.settings  %}

{% assign show_collection_categories = section.settings.collection_categories_show %}

{% paginate collection.products by products_per_page %}
  <div class="large--padding-top--up-4 padding-bottom--up-4 medium--padding-top--up-3 small--padding-top--up-2">
    <div class="theme-container">
      <div class="grid grid-gutter--up-5">

        <div class="grid-item xlarge--three-twentieths large-down--hide">
          {% if collection_filters %}
          <div class="padding-bottom--up-2 border-bottom-detail margin-bottom--up-3">
            {% include "collection-filters", settings: section.settings %}
          </div>
          {% endif %}
          {% if show_collection_categories %}
          <div class="">
            {% include "collection-categories", settings: section.settings  %}
          </div>
          {% endif %}
        </div>

        <div class="grid-item xlarge--seventeen-twentieths">
          <div class="grid">
            <div class="grid-item large--one-half">
              <h1 class="large--font-size--up-7 medium--font-size--up-5 small--font-size--up-4 line-height--up-7 font-secondary font-bold margin-bottom--up-3">
                {{ collection.title }}
              </h1>
            </div>
            <div class="grid-item large--one-half medium-down--hide">
              <div class="float-right-remove-ss">
                {% include "collection-sort", settings: section.settings  %}
                {% include "collection-products-per-page", settings: section.settings  %}
              </div>
            </div>
          </div>

          <div class="grid large--hide padding-bottom--up-2">
            <div class="grid-item one-half">
              {% include "collection-filters-mobile", settings: section.settings  %}
            </div>
            <div class="grid-item one-half">
              {% include "collection-sort-mobile", settings: section.settings  %}
              {% include "collection-products-per-page-mobile", settings: section.settings  %}
            </div>
          </div>

          <div class="rte-collection medium-only--margin-bottom--up-3">
            {{ collection.description }}
          </div>

            <div class="grid">
              <div class="grid-item">
                <div class="grid-uniform">
                  {% for product in collection.products %}
                    {% include "product-thumbnail", settings: section.settings  %}
                  {% endfor %}
                </div>
              </div>
            </div>

          {% if paginate.pages > 1 %}
            <div class="border-top-detail margin-top--up-1 padding-top--up-5 padding-bottom--up-3">
              {% include "pagination-custom" %}
            </div>
          {% endif %}
        </div>

      </div>
    </div>
  </div>
{% endpaginate %}


