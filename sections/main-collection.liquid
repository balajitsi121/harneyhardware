      "default":"Date, old to new"
    },
    {
      "type":"header",
      "content":"Categories"
    },
    {
        "type":"checkbox",
        "id":"collection_categories_show",
        "label":"Show Collection Categories?",
        "default":true
     },
     {
        "type":"text",
        "id":"collection_categories_header",
        "label":"Collection Categories Header",
