{% assign title = settings.customer_password_recover_title %}

{% assign description = settings.customer_password_recover_description | default: false %}

{% assign success = settings.customer_password_recover_success %}

{% assign call_to_action = settings.customer_password_recover_call_to_action %}

{% assign registration_prompt = settings.customer_login_registration_question %}

{% assign registration_call_to_action = settings.customer_login_registration_call_to_action %}

{% assign back_to_login_prompt = settings.customer_password_recover_back_to_login %}

<div class="js-form-container hide large--padding-top--up-4 medium-down--padding-top--up-2 large--padding-bottom--up-7 medium-down--padding-bottom--up-5">

  <div class="flex medium-down--flex-direction--column">
    <div class="flex-item--4 padding-right--up-5">
      <div class="large--padding-bottom--up-6 large--border-bottom-detail margin-bottom--up-3">
        <h1 class="font-size--up-9 small--font-size--up-5 medium--font-size--up-6 font-bold font-secondary large--line-height--up-9 medium-down--line-height--up-6">
          {{ title }}
        </h1>
      </div>
      <p class="text-links font-secondary font-size--up-2 line-height--up-5 medium-down--hide">
        {{ registration_prompt }}
        <br>
        <a class="text-primary" href="/account/register">
          {{ registration_call_to_action }}
        </a>
      </p>
    </div>
    <div class="flex-item--8">
      {% form "recover_customer_password" %}

        {% if form.errors %}
          <div class="text-links">
            {{ form.errors | default_errors }}
          </div>
        {% elsif form.posted_successfully? %}
          <p>{{ success }}</p>
        {% elsif description %}
          <p>{{ description }}</p>
        {% endif %}

        <input type="email" id="recover-email" class="input margin-bottom--up-2 border-detail margin-bottom--none padding-top-bottom--up-1 padding-left--up-1" name="email" placeholder="Email" value="" autocorrect="off" autocapitalize="off" required />

        <button type="submit" class="block padding-top-bottom--up-1 button-primary-filled border-primary-thicker hover-border-primary-thicker font-size--up-1 one-whole medium-down--padding-top-bottom--0">
          {{ call_to_action }}
        </button>

        <p class="medium-down--padding-bottom--up-2 medium-down--margin-bottom--up-3 medium-down--border-bottom-detail">
          <a href="#" class="js-toggle-forms text-accent hover-text-primary font-secondary line-height--up-9">
            {{ back_to_login_prompt }}
          </a>
        </p>
        <p class="text-links font-secondary font-size--up-2 line-height--up-5 large--hide">
          {{ registration_prompt }}
          <a class="text-primary" href="/account/register">
            {{ registration_call_to_action }}
          </a>
        </p>
      {% endform %}
    </div>
  </div>

</div>

</div>
