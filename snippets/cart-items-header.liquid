{% assign header = settings.cart_line_items_table_header_product_description %}

{% assign each = settings.cart_line_items_table_header_each %}

{% assign quantity = settings.cart_line_items_table_header_quantity %}

{% assign total = settings.cart_line_items_table_header_total %}

{% assign remove = settings.cart_line_items_table_header_remove %}

<div class="border-bottom-detail medium-down--hide">
  <div class="grid-bar padding-top--0 padding-bottom--up-2">
    <div class="grid-item medium--two-fifths">
      <span class="font-secondary font-boldest text-caps font-size--down-1">{{ header }}</span>
    </div>

    <div class="grid-item medium--three-fifths">
      <div class="grid-bar">
        <div class="grid-item three-tenths small--one-third small--text-left text-center">
          <span class="font-secondary font-boldest text-caps font-size--down-1">{{ each }}</span>
        </div>
        <div class="grid-item large--four-tenths medium--four-tenths small--three-fifths small--one-third">
          <span class="font-secondary font-boldest text-caps font-size--down-1">{{ quantity }}</span>
        </div>
        <div class="grid-item medium--three-tenths large--two-tenths small--one-third small--text-left text-center">
          <span class="font-secondary font-boldest text-caps font-size--down-1">{{ total }}</span>
        </div>
        <div class="grid-item one-tenth small--one-third text-center">
          <span class="font-secondary font-boldest text-caps font-size--down-1">{{ remove }}</span>
        </div>
      </div>
    </div>
  </div>
</div>
